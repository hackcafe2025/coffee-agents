services:
  mcp-server:
    build: .
    command: python mcp_server_stub.py
    ports:
      - "8001:8001"
  coffee-api:
    build: .
    command: gunicorn -k uvicorn.workers.UvicornWorker app:app --bind 0.0.0.0:5000
    depends_on:
      - mcp-server
    ports:
      - "5000:5000"
    environment:
      - OPENAI_API_KEY=${OPENAI_API_KEY}
      - MCP_SERVER_URL=http://mcp-server:8001
